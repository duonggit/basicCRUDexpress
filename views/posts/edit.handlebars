<div class="post-edit-form">
    <form class="edit-form" action="/posts/{{post._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <h4 for="title">Tiêu đề</h4>
          <input type="text" placeholder="How are you today?" class="form-control title" name="title" value="{{post.title}}" required>
        </div>
        <div class="form-group">
            <h4>Nội dung</h4>
                <textarea placeholder="What happening?" type="text" name="text" id="content" class="content">{{post.text}}</textarea>
        </div>
            <div class="btn-container">
                <button class="btn" type="submit">Update</button>
                <a class="btn" href="/posts" type="button">Cancel</a>
                </div>            
        </form>
</div>
