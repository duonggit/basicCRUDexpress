<section class="form-section">
    <form class="form" action="/posts" method="POST">
        <div class="form-group">
          <h4 for="title">Tiêu đề</h4>
          <input type="text" placeholder="How are you today?" class="form-control title" name="title" value="{{title}}" required>
        </div>
        <div class="form-group">
            <h4>Nội dung</h4>
                <textarea placeholder="What happening?" type="text" name="text" id="content" class="content">{{text}}</textarea>
                <button class="btn" type="submit">tweet</button>
        </div>
      </form>
</section>